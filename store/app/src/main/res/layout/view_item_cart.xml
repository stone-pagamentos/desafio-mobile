<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/service_card"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_96dp"
    app:cardBackgroundColor="@color/grayBgLight"
    app:cardUseCompatPadding="true">

    <android.support.constraint.ConstraintLayout
        style="@style/match_match"
        android:layout_margin="@dimen/dimen_6dp">

        <TextView
            android:id="@+id/tv_services"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_marginEnd="@dimen/dimen_8dp"
            android:layout_marginTop="@dimen/dimen_12dp"
            android:textSize="@dimen/dimen_18dp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintEnd_toStartOf="@+id/tv_service_value"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_service_value"
            style="@style/wrap_wrap"
            android:layout_marginEnd="@dimen/dimen_8dp"
            android:layout_marginTop="@dimen/dimen_12dp"
            android:text="R$2500,00"
            android:textSize="@dimen/dimen_18dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/ib_delete"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/ib_delete"
            android:layout_width="@dimen/dimen_20dp"
            android:layout_height="@dimen/dimen_20dp"
            android:layout_marginEnd="@dimen/dimen_8dp"
            android:tint="@color/red"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_delete"
            app:layout_constraintBottom_toBottomOf="@+id/tv_service_value"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_service_value" />

        <TextView
            android:id="@+id/tv_seller_name"
            style="@style/wrap_wrap"
            android:layout_marginBottom="@dimen/dimen_4dp"
            android:layout_marginTop="@dimen/dimen_4dp"
            android:textColor="@color/grayDark"
            android:textSize="@dimen/dimen_15dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_services"
            app:layout_constraintTop_toBottomOf="@+id/tv_services" />


    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>


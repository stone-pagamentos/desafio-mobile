<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/checkout_activity_view"
    style="@style/match_match"
    android:orientation="vertical">

    <LinearLayout
        style="@style/match_match"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/cart_toolbar"
            style="@style/match_wrap"
            android:minHeight="?attr/actionBarSize"
            app:theme="@style/ToolBarStyle"  />

        <ProgressBar
            android:id="@+id/checkout_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/white"
            android:indeterminate="true"
            android:indeterminateTint="@color/colorPrimary"
            android:max="100"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/checkout_toolbar" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/cart_list"
            style="@style/match_wrap"
            android:layout_above="@+id/book_panel"
            android:layout_below="@+id/address_card"
            android:layout_weight="1"
            android:layoutAnimation="@anim/layout_animation_slide_up" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/hr" />

        <LinearLayout
            style="@style/match_wrap"
            android:orientation="horizontal"
            android:padding="@dimen/dimen_6dp">

            <TextView
                android:id="@+id/tv_service_name"
                style="@style/match_wrap"
                android:layout_marginLeft="@dimen/dimen_6dp"
                android:layout_weight="1"
                android:text="@string/total_caps"
                android:textSize="@dimen/text_size_18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_total_value"
                style="@style/match_wrap"
                android:layout_marginRight="@dimen/dimen_6dp"
                android:layout_weight="1"
                android:gravity="right"
                android:textSize="@dimen/text_size_18sp"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/proceed_to_checkout_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50dp"
            android:background="@color/colorPrimary">

            <TextView
                style="@style/match_match"
                android:gravity="center"
                android:text="@string/proceed_to_checkout"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
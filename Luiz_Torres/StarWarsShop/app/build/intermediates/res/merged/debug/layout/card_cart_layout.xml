<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:paddingTop="2dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_cart"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="5dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            >

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/iv_cart_layout_item_image"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_loading"
                android:scaleType="fitXY"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iv_cart_layout_item_name"
                android:layout_toRightOf="@id/iv_cart_layout_item_image"
                android:layout_toEndOf="@id/iv_cart_layout_item_image"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="Blusa do C3 PO"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_cart_layout_totalCount"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/iv_cart_layout_add_item"
                android:layout_toStartOf="@+id/iv_cart_layout_add_item"
                android:padding="3dp"
                android:text="2000"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:background="@color/colorPrimary"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iv_cart_layout_item_price"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/tv_cart_layout_totalCount"
                android:layout_toStartOf="@id/tv_cart_layout_totalCount"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"
                android:text="R$ 5000,00"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_cart_layout_item_seller"
                android:layout_toRightOf="@id/iv_cart_layout_item_image"
                android:layout_toEndOf="@id/iv_cart_layout_item_image"
                android:layout_below="@+id/iv_cart_layout_item_price"
                android:text="Seller"
                />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/iv_cart_layout_add_item"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_add"
                android:scaleType="fitXY"/>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/iv_cart_layout_remove_item"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/iv_cart_layout_add_item"
                android:src="@drawable/ic_remove"
                android:scaleType="fitXY"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
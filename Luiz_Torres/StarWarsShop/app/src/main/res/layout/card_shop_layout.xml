<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_shop"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="5dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            >

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/iv_shop_layout_item_image"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:contentDescription="@string/image_description"
                android:src="@drawable/ic_loading"
                android:scaleType="fitXY"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iv_shop_layout_item_name"
                android:layout_toRightOf="@id/iv_shop_layout_item_image"
                android:layout_toEndOf="@id/iv_shop_layout_item_image"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="Blusa do C3 PO"
                />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/iv_shop_layout_add_cart"
                android:src="@drawable/ic_add_cart"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:scaleType="fitXY"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iv_shop_layout_item_price"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/iv_shop_layout_add_cart"
                android:layout_toStartOf="@+id/iv_shop_layout_add_cart"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"
                android:text="R$ 5000,00"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iv_shop_layout_item_seller"
                android:layout_toRightOf="@id/iv_shop_layout_item_image"
                android:layout_toEndOf="@id/iv_shop_layout_item_image"
                android:layout_below="@+id/iv_shop_layout_item_price"
                android:text="Seller"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
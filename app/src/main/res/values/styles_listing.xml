<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="listing_error_msg" parent="@style/MaterialTypography.Regular.Title">
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="listing_title" parent="@style/MaterialTypography.Regular.Title">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="listing_seller" parent="@style/MaterialTypography.Regular.Subheading">
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="listing_price" parent="@style/MaterialTypography.Regular.Headline">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>


    <style name="listing_in_cart_ic">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
    </style>

    <style name="listing_buy_bt" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">@color/material_typography_primary_text_color_light</item>
    </style>
</resources>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="55dp"
    tools:context="com.stone.mobile.stonestore.Fragments.CarrinhoFragment">

    <TextView
        android:id="@+id/carrinho"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textColor="@android:color/holo_orange_dark"
        android:text="@string/meu_carrinho"
        android:textSize="22sp"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/listCarrinho"
        android:layout_below="@id/carrinho"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/tvTotalCompra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/listCarrinho"
        android:text="Total: R$ 0,00"
        android:textAlignment="textEnd"
        android:textColor="@android:color/black"
        android:textSize="22sp" />

    <Button
        android:id="@+id/btnFinalizarCompra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTotalCompra"
        android:layout_margin="8dp"
        android:background="@drawable/selector_finalizar_button"
        android:text="@string/finalizar_compra"
        android:textColor="@android:color/white" />

</RelativeLayout>

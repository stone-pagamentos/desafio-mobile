<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginTop="@dimen/listing_loading_error_margin_top"
              android:orientation="vertical">

    <ImageView
        android:layout_width="@dimen/cart_summary_img_size"
        android:layout_height="@dimen/cart_summary_img_size"
        android:layout_gravity="center"
        android:src="@drawable/ic_close"
        android:tint="@color/colorAccent"/>

    <TextView
        style="@style/CommonErrorTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/listing_conn_issue"/>

</LinearLayout>
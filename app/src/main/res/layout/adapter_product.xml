<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_product"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    android:foreground="@drawable/ripple">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageview_product"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:scaleType="centerCrop"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center_horizontal|center"
            android:src="@android:drawable/sym_def_app_icon" />

        <TextView
            android:id="@+id/textview_title_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/imageview_product"
            android:layout_marginBottom="10dip"
            android:layout_marginTop="15dip"
            android:textSize="16sp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Lorem Ipsum go home make a great party without me" />

        <TextView
            android:id="@+id/textview_seller_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_toEndOf="@+id/imageview_product"
            android:layout_below="@id/textview_title_product"
            android:layout_marginBottom="10dp"
            android:text="Luke Skywalker" />

        <TextView
            android:id="@+id/textview_price_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/colorAccent"
            android:layout_toEndOf="@+id/imageview_product"
            android:layout_below="@id/textview_seller_product"
            android:text="R$ 100,00"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/imageview_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete_forever_black_24dp"
            android:visibility="gone"
            android:padding="5dip"
            android:layout_marginEnd="14dp"
            android:layout_alignBottom="@+id/textview_price_product"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
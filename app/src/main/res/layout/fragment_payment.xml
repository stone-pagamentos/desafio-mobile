<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="br.com.wagnerrodrigues.starwarsstore.presentation.view.fragment.CartFragment">


    <View
        android:id="@+id/separator_up"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_above="@+id/rl_total_purchase"
        android:layout_alignParentBottom="false"
        android:layout_alignParentStart="false"
        android:background="#BBBBBB" />

    <View
        android:id="@+id/separator_down"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_above="@+id/ll_finish_purchase"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:background="#BBBBBB" />

    <LinearLayout
        android:id="@+id/ll_card_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/separator_up"
        android:layout_alignParentStart="false"
        android:layout_marginTop="60dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:text="Prencha os dados do seu cartão de crédito para efetuar o pagamento"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lb_name"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:labelFor="@id/et_name"
                android:text="@string/payment_label_nome" />

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text|textPersonName"
                android:maxLength="120" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lb_card_number"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:labelFor="@id/et_card_number"
                android:text="@string/payment_label_card_numbr" />

            <EditText
                android:id="@+id/et_card_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:maxLength="16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lb_exp_date"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/payment_label_data_vencimento" />

            <EditText
                android:id="@+id/et_exp_month"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:maxLength="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/date_separator"/>

            <EditText
                android:id="@+id/et_exp_year"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:maxLength="2" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lb_cvv"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/payment_label_cvv" />

            <EditText
                android:id="@+id/et_cvv"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:maxLength="3" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_total_purchase"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_above="@+id/separator_down"
        android:layout_alignParentBottom="false"
        android:layout_alignParentStart="false"
        android:gravity="clip_vertical"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        tools:ignore="RtlSymmetry">


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/cart_total_payment"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tx_total_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="false"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:layout_toEndOf="@+id/textView2"
            android:textAlignment="textEnd"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            tools:ignore="RtlHardcoded" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_finish_purchase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="false"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:paddingEnd="10dp"
        android:paddingStart="10dp">

        <Button
            android:id="@+id/bt_finish_purchase"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/button_primary"
            android:text="@string/cart_finish_purchase" />
    </LinearLayout>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/txtOrderId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_order_id"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_dark"
            />
        <TextView
            android:id="@+id/txtCardHolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_order_card_holder"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/txtLastDigits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_order_card_last_digits"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/txtValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_order_value"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/txtDateProcessed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_order_process_date"
            android:textSize="15sp"
            />
    </LinearLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="personal.pedrofigueiredo.milleniumstore.activities.ProductDetailActivity">

    <LinearLayout
        android:id="@+id/imageLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        >

        <ImageView
            android:id="@+id/productDetailedImg"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_launcher_background"
             />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/textLayoutTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageLayout"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/labelTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/product_label_title"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/txtProdTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="@string/product_sample_name"
            android:textSize="15sp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/textLayoutSeller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textLayoutTitle"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/labelSeller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/product_label_seller"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/txtProdSeller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="@string/product_sample_seller"
            android:textSize="15sp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/textLayoutPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textLayoutSeller"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/labelPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/product_label_price"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/txtProdPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="@string/product_sample_price"
            android:textSize="15sp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/textLayoutPrice"
        android:gravity="bottom"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/detailCartBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@color/colorPrimary"
            android:text="@string/action_add_cart"
            android:textColor="@android:color/primary_text_dark"
            />
    </LinearLayout>

</RelativeLayout>

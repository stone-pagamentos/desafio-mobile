<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="personal.pedrofigueiredo.milleniumstore.activities.ViewCartActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:orientation="vertical">
        <TextView
            android:id="@+id/cartTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/view_cart_title"
            android:textColor="@android:color/holo_blue_dark"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/cartTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="20sp"
            />
        <ListView
            android:id="@+id/cartList"
            android:layout_width="wrap_content"
            android:layout_height="350dp"
            android:scrollbars="vertical"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom">
        <Button
            android:id="@+id/btnCheckout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="5dp"
            android:background="@color/colorPrimary"
            android:text="@string/btn_checkout"
            android:textColor="@android:color/primary_text_dark"
            />
        <Button
            android:id="@+id/btnClear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_gravity="bottom"
            android:background="@color/colorPrimary"
            android:onClick="clearCart"
            android:text="@string/btn_clear_cart"
            android:textColor="@android:color/primary_text_dark"
            />
    </LinearLayout>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <ImageView
        android:id="@+id/imageCarrinho"
        android:layout_width="100dp"
        android:layout_height="135dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="0.28"
        android:src="@mipmap/ic_launcher" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        android:orientation="vertical">

        <Button
            android:id="@+id/btComprar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.28"
            android:text="Comprar"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/etCvv"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
           />

        <TextView
            android:id="@+id/titleCarrinho"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="-4dp"
            android:text="Product Name"
            android:textColor="@android:color/background_dark"
            android:textSize="20sp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/etPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:text="Price"
            android:textColor="@android:color/background_dark"
            android:textSize="20sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/textView5"
            android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="@+id/textView5"
            android:layout_marginTop="0dp" />

        <TextView
            android:id="@+id/SellerCarrinho"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="0dp"
            android:text="Vendedor"
            android:textColor="@android:color/background_dark"
            android:textSize="20sp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R$"
            android:textColor="@android:color/background_dark"
            android:textSize="20sp"
            android:layout_marginTop="-1dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="3dp"
            android:text="Nome do Produto"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preço"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/titleCarrinho"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:text="Vendedor"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etPrice" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome"
            tools:layout_editor_absoluteX="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <EditText
            android:id="@+id/etNome"
            android:layout_width="201dp"
            android:layout_height="41dp"
            android:layout_marginTop="0dp"
            android:ems="10"
            android:hint="João da Silva"
            android:inputType="textPersonName"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="204dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="Número do Cartão"
            app:layout_constraintTop_toBottomOf="@+id/etNome"
            tools:layout_editor_absoluteX="0dp" />

        <EditText
            android:id="@+id/etNumCartao1"
            android:layout_width="52dp"
            android:layout_height="43dp"
            android:layout_marginTop="0dp"
            android:ems="10"
            android:hint="1234"
            android:inputType="textPersonName"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            tools:layout_editor_absoluteX="-1dp"
            tools:layout_editor_absoluteY="264dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:text="Pagamento"
            android:textSize="23dp"
            app:layout_constraintTop_toBottomOf="@+id/SellerCarrinho"
            tools:layout_editor_absoluteX="41dp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="Venc."
            app:layout_constraintTop_toBottomOf="@+id/etNumCartao1"
            tools:layout_editor_absoluteX="0dp" />

        <EditText
            android:id="@+id/etMes"
            android:layout_width="39dp"
            android:layout_height="41dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="12"
            android:inputType="textPersonName"
            app:layout_constraintTop_toBottomOf="@+id/textView9"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="314dp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="14dp"
            android:layout_height="40dp"
            android:layout_marginLeft="1dp"
            android:text="/"
            android:textSize="25dp"
            app:layout_constraintLeft_toRightOf="@+id/etMes"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView9"
            tools:layout_editor_absoluteY="327dp" />

        <EditText
            android:id="@+id/etAno"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="21"
            android:inputType="textPersonName"
            app:layout_constraintLeft_toRightOf="@+id/textView10"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CVV"
            tools:layout_editor_absoluteX="0dp"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/etMes" />

        <EditText
            android:id="@+id/etCvv"
            android:layout_width="73dp"
            android:layout_height="45dp"
            android:layout_marginTop="0dp"
            android:ems="10"
            android:hint="123"
            android:inputType="textPersonName"
            app:layout_constraintTop_toBottomOf="@+id/textView11"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="372dp" />

        <Button
            android:id="@+id/btListar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="Listar Transações"
            app:layout_constraintLeft_toRightOf="@+id/btComprar"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="0dp" />

        <EditText
            android:id="@+id/etNumCartao4"
            android:layout_width="56dp"
            android:layout_height="42dp"
            android:layout_marginTop="-1dp"
            android:ems="10"
            android:hint="1234"
            android:inputType="textPersonName"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            app:layout_constraintLeft_toRightOf="@+id/etNumCartao3"
            android:layout_marginLeft="-5dp" />

        <EditText
            android:id="@+id/etNumCartao3"
            android:layout_width="56dp"
            android:layout_height="42dp"
            android:layout_marginTop="-1dp"
            android:ems="10"
            android:hint="1234"
            android:inputType="textPersonName"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            app:layout_constraintLeft_toRightOf="@+id/etNumCartao2"
            android:layout_marginLeft="-1dp" />

        <EditText
            android:id="@+id/etNumCartao2"
            android:layout_width="56dp"
            android:layout_height="42dp"
            android:layout_marginLeft="-7dp"
            android:layout_marginTop="0dp"
            android:ems="10"
            android:hint="1234"
            android:inputType="textPersonName"
            app:layout_constraintLeft_toRightOf="@+id/etNumCartao1"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            tools:layout_editor_absoluteY="270dp" />

    </android.support.constraint.ConstraintLayout>

</LinearLayout>